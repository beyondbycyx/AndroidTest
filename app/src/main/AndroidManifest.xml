<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hugo.androidtest"
    tools:overrideLibrary="android.support.test.uiautomator.v18" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LaunchActivity"
            android:label="@string/title_activity_launch"
            android:theme="@style/Theme.AppCompat"
            >
        </activity>
        <activity
            android:name=".LaunchNextActivity"
            android:label="@string/title_activity_launch_next"
            android:theme="@style/Theme.AppCompat"
            >
        </activity>
        <activity
            android:name=".CalculatorActivity"
            android:label="@string/title_activity_calculator" >
        </activity>
        <activity
            android:name=".ViewPerformActivity"
            android:label="@string/title_activity_view_perform"
            android:theme="@style/Theme.AppCompat"
            >
        </activity>
    </application>

</manifest>
